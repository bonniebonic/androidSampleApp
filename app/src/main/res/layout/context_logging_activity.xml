<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_email"
            android:layout_weight="1"
            android:hint="Email Address"
            android:layout_marginTop="10dp"
            android:padding="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_firstname"
            android:layout_below="@id/editText_email"
            android:layout_alignParentRight="true"
            android:hint="First Name"
            android:layout_alignParentEnd="true"
            android:padding="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_lastname"
            android:layout_below="@id/editText_firstname"
            android:layout_alignParentRight="true"
            android:hint="Last Name"
            android:layout_alignParentEnd="true"
            android:padding="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_number"
            android:layout_below="@id/editText_lastname"
            android:layout_alignParentRight="true"
            android:hint="Contact Number"
            android:layout_alignParentEnd="true"
            android:padding="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_externalID"
            android:layout_alignParentRight="true"
            android:hint="External ID"
            android:layout_alignParentEnd="true"
            android:padding="20dp"
            android:layout_below="@id/editText_number" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/radioGroup"
            android:layout_below="@+id/editText_externalID"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="34dp"
            android:visibility="invisible">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Landscape"
                android:id="@+id/radioButton_landscape"
                android:checked="false" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Portrait"
                android:id="@+id/radioButton_portrait"
                android:checked="false" />
        </RadioGroup>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="DONE!"
            android:id="@+id/btnNext"
            android:layout_marginTop="35dp"
            android:background="#ff99cc00"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/radioGroup" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Please Select Device Orientation"
            android:id="@+id/textView2"
            android:layout_below="@+id/editText_externalID"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:visibility="invisible" />

    </RelativeLayout>

</RelativeLayout>